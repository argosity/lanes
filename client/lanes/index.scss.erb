@font-face {
  font-family: 'lanes-icon';
  src:url(font-path('fonts/lanes/icomoon.eot'));
  src:url(font-path('fonts/lanes/icomoon.eot')) format('embedded-opentype'),
  url(font-path('fonts/lanes/icomoon.woff')) format('woff'),
  url(font-path('fonts/lanes/icomoon.ttf')) format('truetype'),
  url(font-path('fonts/lanes/icomoon.svg')) format('svg');
  font-weight: normal;
  font-style: normal;
}

.lanes {

<% Lanes::Extensions.each_asset(phase: :all, type: :css) do | asset | %>
  @import "<%= asset %>";
<% end %>

<% Lanes::Components.enabled_with_dependencies(self) do | component | %>
  @import "lanes/components/<%= component %>/styles";
<% end %>

<% if !Lanes.config.initial_workspace_screen_id.blank? &&
      screen = Lanes::Screen[Lanes.config.initial_workspace_screen_id]
%>
  @import "<%= screen.css.remove(/\.css$/) + "/index.scss" %>"
<% end %>

  @import "styles/plugins/all"
  
}
