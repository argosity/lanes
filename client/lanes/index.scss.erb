@import "styles/fonts";

.lanes {
  @import "styles/global";

<% Lanes::Extensions.each_asset(phase: :all, type: :css) do | asset | %>
  @import "<%= asset %>";
<% end %>

@import "lanes/components/shared/styles";

<% Lanes::Components.enabled_with_dependencies(self) do | component | %>
  @import "lanes/components/<%= component %>/styles";
<% end %>

<% if !Lanes.config.initial_workspace_screen_id.blank? &&
      screen = Lanes::Screen[Lanes.config.initial_workspace_screen_id] %>
  @import "<%= screen.css.remove(/\.css$/) + "/index.scss" %>";
<% end %>

  @import "styles/plugins/all";
}
