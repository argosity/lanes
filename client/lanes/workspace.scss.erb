@import "styles/fonts";
@import "styles/vendor/bootstrap";

.lanes {
  padding: 0px;
  margin: 0px;
  background-color: $body-bg;
  position: relative;
  min-height: 10px; // needs height for resizing sensor to function
<% Lanes::Extensions.each_asset(phase: :all, type: :css) do | asset | %>
  @import "<%= asset %>";
<% end %>
<% Lanes::Components.enabled_with_dependencies(self) do | component | %>
  @import "lanes/components/<%= component %>/styles";
<% end %>
  @import "styles/plugins/all";
  @import "styles/layout";
  @import "styles/tabs";
  @import "styles/screens";
  @import "styles/forms";
  @import "styles/forms";
  @import "styles/forms";
  @import "styles/keybindings";
}
<% if !Lanes.config.initial_workspace_screen_id.blank? &&
      screen = Lanes::Screen[Lanes.config.initial_workspace_screen_id]
%>
  @import "<%= screen.css.remove(/\.css$/) + "/index.scss" %>"
<% end %>
